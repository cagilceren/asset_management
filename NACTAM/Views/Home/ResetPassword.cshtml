
@using NACTAM.ViewModels;
@using Microsoft.AspNetCore.Identity

@{
	ViewData["Sidebar"] = "Empty";
	ViewData["Header"] = "Empty";
}


@model PasswordResetViewModel

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0) {
	<div class="alert alert-danger">@Html.ValidationSummary()</div>
}
<form asp-action="ResetPassword" method="post" class="user" id="login-form" style="width: 25vw">
	<div class="text-center">
		<h1 class="h4 text-gray-900 my-4">Reset Password</h1>
	</div>
	<div class="form-group" style="margin: 30px">
		<input type="password" asp-for="Password" class="form-control form-control-user"
			id="password" placeholder="neues Passwort">
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-group" style="margin: 30px">
		<input type="password" asp-for="PasswordConfirmation" class="form-control form-control-user"
			id="password-confirmation" placeholder="neues Passwort wiederholen">
		<span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
	</div>	
	<input type="hidden" asp-for="Token" class="form-control form-control-user" id="token-input">
	<input type="hidden" asp-for="UserName" class="form-control form-control-user" id="username-input">
	<button class="btn btn-primary btn-user" style="right: 100px; position: absolute;" type="submit">Passwort Ã¤ndern</button>
</form>




@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}
